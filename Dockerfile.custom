FROM chatwoot/chatwoot:v4.1.0

# Adicionar customizações se necessário
# Por exemplo, configurações específicas do Darwin AI

# Manter as mesmas variáveis de ambiente
ENV RAILS_ENV=production
ENV NODE_ENV=production

# Expor porta padrão
EXPOSE 3000

# Usar entrypoint padrão do Chatwoot
ENTRYPOINT ["docker/entrypoints/rails.sh"]
CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0", "-p", "3000"] 